<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="0dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="500sp"
        android:layout_height="90sp">

        <RelativeLayout
            android:id="@+id/back_match"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:background="@color/colorBackground"
            android:padding="16dp">



            <ImageView
                android:id="@+id/image_champ"
                android:layout_width="50dp"
                android:layout_height="49dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp" />

            <TextView
                android:id="@+id/score"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/champ_points"
                android:layout_alignParentStart="true"
                android:layout_marginStart="98dp"
                android:layout_marginTop="-5dp"
                android:text="TextView"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/image_sum1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="56dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/image_sum2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="56dp"
                android:layout_marginBottom="-20dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/image_item1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="56dp"
                android:layout_marginBottom="-45dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/image_item2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="76dp"
                android:layout_marginBottom="-45dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/image_item3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="96dp"
                android:layout_marginBottom="-45dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/image_item4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="116dp"
                android:layout_marginBottom="-45dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/image_item5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="136dp"
                android:layout_marginBottom="-45dp"
                app:srcCompat="@android:color/black" />

            <ImageView
                android:id="@+id/image_item6"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/score"
                android:layout_alignParentStart="true"
                android:layout_marginStart="156dp"
                android:layout_marginBottom="-45dp"
                app:srcCompat="@android:color/black" />

            <TextView
                android:id="@+id/field_queue"
                android:layout_width="149dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="97dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="264dp"
                android:layout_marginBottom="19dp"
                android:text="QUEUE TYPE"
                android:textColor="@android:color/white" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>