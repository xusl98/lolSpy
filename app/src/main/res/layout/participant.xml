<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="0dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            >

            <ImageView
                android:id="@+id/image_champ"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/sum1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/image_champ"
                android:layout_marginTop="4dp" />
            <ImageView
                android:id="@+id/sum2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/image_champ"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/view_rank"
                android:layout_width="25dp"
                android:layout_height="17dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/sum1"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/view_nombre"
                android:layout_width="140dp"
                android:layout_height="17dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/view_rank"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/view_kda"
                android:layout_width="70dp"
                android:layout_height="17dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/sum2"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/img_item1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/view_nombre"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:id="@+id/img_item2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/img_item1"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:id="@+id/img_item3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/img_item2"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:id="@+id/img_item4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/img_item3"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:id="@+id/img_item5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/img_item4"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:id="@+id/img_item6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/img_item5"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="14dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>